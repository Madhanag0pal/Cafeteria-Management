<div class="row justify-content-around px-2">
  <div class="col-8">
    <h5 class="text-center">Cart Items</h5>
  </div>
  <div class="col-4 text-center">
      <% if @cart_items.present? %>
        <%= link_to cart_item_path(id: 0), method: :delete, class: "btn btn-outline-danger btn-sm my-auto" do %>
          <!-- <i class="bi bi-cart-x-fill btn btn-outline-danger btn-sm my-auto" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Clear Cart"></i> -->
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-x-fill" viewBox="0 0 16 16">
            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM7.354 5.646 8.5 6.793l1.146-1.147a.5.5 0 0 1 .708.708L9.207 7.5l1.147 1.146a.5.5 0 0 1-.708.708L8.5 8.207 7.354 9.354a.5.5 0 1 1-.708-.708L7.793 7.5 6.646 6.354a.5.5 0 1 1 .708-.708z"/>
          </svg>
        <% end %>
      <% end %>
  </div>
</div>
<div class="row border-top scroll-y h-75">
  <div class="col-12 border">
    <% if @cart_items.present? %>
      <% @cart_items.order(:id).each do |item| %>
        <div class="row border-bottom  py-1">
          <div class="col-8 text-start w-50 px-1">
            <p><%= item.menu_item.name %><p>
          </div>
          <div class="col-4 text-end w-50 px-1">
            <p class="m-0">₹<%= item.price %><p>
            <div class="btn-group btn-group-sm">
                  <%= link_to "-", cart_item_path(id: item.id, quantity: item.quantity - 1), method: :put, class: "btn btn-outline-primary" %>
                  <a class="btn border-top border-bottom"> <%= item.quantity %> </a>
                  <%= link_to "+", cart_item_path(id: item.id, quantity: item.quantity + 1), method: :put, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class= "row row-cols-1 row-cols-lg-2 text-center my-2">
  <% if @cart_items.present? %>
    <div class= "col m-auto">
      <%= "Subtotal: ₹" + @cart_items.price.to_s %>
    </div>
    <div class= "col m-auto">
      <% if @current_user.customer? %>
        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#checkout-Modal"> Checkout </button>
      <% else %>
        <%= button_to "Checkout", orders_path, method: :post, data: { confirm: "Are you sure?" }, class: "btn btn-outline-primary btn-sm " %>
      <% end %>


    </div>
  <% end %>
</div>
