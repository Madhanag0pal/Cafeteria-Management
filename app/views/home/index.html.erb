<div class="container-fluid row">
  <div class="col-9">
    <% for catagory in MenuCategory.all %>
      <div class="py-3" id=<%= catagory.name %>>
        <h2><%= catagory.name %></h2>
        <hr>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 gx-3 gy-3">
          <% catagory.menu_items.each do |item| %>
            <div class="col card">
              <%= image_tag "food" %>
              <div class="card-body">
                <h5 class="card-title"> <%= item.name %> </h5>
                  <p class="card-text ">Some discription<p>
                <div class="d-flex justify-content-between">
                  <p>â‚¹<%= item.price %></p>
                  <a href="#" class="btn btn-primary">Add</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-3 card position-fixed end-0 p-3 mt-5 me-2" style="height:400px">
    <h3 class="text-center">Cart Items</h3>
    <div class="row border-top scroll-y">
      <div class="col">
        <% @current_user.cart_items.each do |item| %>
          <h1><%= item %><h1>
        <% end %>
      </div>
    </div>
  </div>
</div>
