<nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="navbar">
  <div class="container-fluid" id="navbar">
    <a class="navbar-brand" href="/">
      <i class="bi bi-house-fill" ></i>
    </a>
    <div class="col-6 col-sm-9 col-md-10 col-lg-6 scroll-x mb-2 mb-lg-0">
      <ul class="navbar-nav flex row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 flex-row ">
        <% MenuCategory.order(:id).each do |catagory| %>
          <li class="nav-item d-flex col justify-content-center">
            <a class="nav-link active" aria-current="page" href=<%= "/#" + catagory.name %> ><%= catagory.name %></a>
          </li>
        <% end %>
      </ul>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor" aria-controls="navbarColor" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-between" id="navbarColor">
      <div class="d-flex justify-content-center ps-2">
        <form class="d-inline-flex">
          <input class="form-control w-100 me-2" placeholder="Search for Menu Item" name="search">
          <button class="btn btn-success" type="submit">Search</button>
        </form>
      </div>
      <hr>
      <% if @current_user %>
        <div class="col-12 col-lg-6 d-flex justify-content-around align-items-center px-3">
          <div class="col-lg-6 p3-3">
            <ul class="navbar-nav me-md-3 mb-3 mb-lg-0">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" data-bs-placement="bottom" aria-expanded="false">
                  <i class="bi bi-person-circle"></i>
                  <%= @current_user.name %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  <li> <%= link_to "My Profile", @current_user, method: :get, class: "dropdown-item" %> </li>
                  <% if @current_user.customer? %>
                    <li> <%= link_to "My Addresses", addresses_path, class: "dropdown-item" %> </li>
                  <% else %>
                    <li> <%= link_to "All Order", orders_path, class: "dropdown-item" %> </li>
                  <% end %>
                  <% unless @current_user.admin? %>
                    <li> <%= link_to "My Orders", order_path(id: @current_user.id), method: :get, class: "dropdown-item" %> </li>
                  <% else %>
                    <li> <%= link_to "Manage", orders_path, class: "dropdown-item" %> </li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
          <div class="col-lg-6 ps-3">
            <div class="d-inline-flex">
              <%= link_to "Sign-out", destroy_sessions_path, method: :delete, class: "btn btn-outline-warning btn-sm" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="col-3 d-flex justify-content-center ps-3">
          <button type="button" class="btn btn-success " data-bs-toggle="modal" data-bs-target="#sign-in-Modal"> Sign In </button>
        </div>
      <% end %>
    </div>
  </div>
</nav>
