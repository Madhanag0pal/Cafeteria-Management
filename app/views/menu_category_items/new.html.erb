<div class="modal-dialog mt-5">
  <div class="modal-content">
    <div class="modal-header ">
      <h5 class="modal-title">Add Items to <%= @category.name %></h5>
    </div>
    <div class="modal-body">
      <div class="form-check px-3 py-1 form-switch d-flex justify-content-between">
        <%= link_to "Create new item", new_menu_item_path(menu_category_id: params[:menu_category_id]), method: :get, class: "form-control btn btn-success w-50 mx-auto" %>
      </div>
      <div class="p-3 h-100 scroll-y" style="max-height: 250px;">
        <% @menu_items.each do |item| %>
          <%= form_with url: menu_category_items_path(menu_item_id: item.id, menu_category_id: @category.id) do %>
            <div class="form-check px-3 py-1 form-switch d-flex justify-content-between">
              <%= label "add", item.name, class: "col-10" %>
              <%= check_box_tag "add", nil, @category_items.include?(item), class: "align-self-center form-check-input", onclick: "this.form.submit()" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="modal-footer justify-content-center">
      <%= link_to "Back", root_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
