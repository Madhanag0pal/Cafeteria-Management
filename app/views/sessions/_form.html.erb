<%= form_with url: url do |form| %>
  <div class="container d-grid gap-4 justify-content-center">

    <% fields.each do |field| %>
      <div class="row">
        <div class="col-3">
          <%= form.label field %>
        </div>
        <div class="col-9">
          <%= case field
              when :password
                form.password_field field
              else
                form.text_field field
              end %>
        </div>
      </div>
    <% end %>
    <div class="mx-auto">
      <%= submit_tag title, class: "btn btn-success" %>
    </div>
  </div>
<% end %>
