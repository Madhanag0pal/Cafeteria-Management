<%= form_with **path do |form| %>
  <div class="container d-grid  row-col-1 justify-content-center">
    <h1 class="text-center m-0">
      <!-- <i class="bi bi-person-circle"></i> -->
      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
      </svg>
    <h1>
      <% fields.each do |field| %>
        <div class="my-2">
          <%= case field
              when :password, :password_confirmation
                form.password_field field, class: "form-control", placeholder: field
              else
                if @current_user
                  form.text_field field, class: "form-control", placeholder: field, value: @current_user[field]
                else
                  form.text_field field, class: "form-control", placeholder: field
                end
              end %>
        </div>
      <% end %>
    <div class="my-2 text-center">
      <%= submit_tag title, class: "btn btn-success w-75" %>
    </div>
  </div>
<% end %>
