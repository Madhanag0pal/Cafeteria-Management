<div class="mx-1 col-sm-8 mx-sm-auto">
  <div class="modal-content mt-5">
    <div class="modal-header">
      <h3 class="mx-auto">My Profile</h3>
    </div>
    <div class="modal-body">
      <div class="d-flex justify-content-center my-3">
        <%= image_tag "avatar.png", size: "100", class: "rounded-circle" %>

        <% unless @current_user.clerk? %>
          <%= link_to edit_user_path(id: @current_user.id), class: "position-relative" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil position-absolute top-100 start-0 translate-middle" viewBox="0 0 16 16">
              <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
            </svg>
          <% end %>
        <% end %>
      </div>
      <div class=" text-center">
        <%= link_to "Change Password", edit_user_path(id: @current_user.id, password: true), method: :get, class: "btn btn-warning" %>
      </div>
      <hr>
      <div class="d-flex  row-cols-2">
        <div class="col-4 text-center">Name :</div>
        <div class="col-8 text-center"><%= @current_user.name %></div>
      </div>
      <div class="d-flex row-cols-2">
        <div class="col-4 text-center">Email:</div>
        <div class="col-8 text-center"><%= @current_user.email %></div>
      </div>
    </div>
    <div class="modal-footer justify-content-center">
      <% unless @current_user.clerk? or @current_user.role.id == 1 %>
        <%= link_to "Delete My Account", @current_user, method: :delete, data: { confirm: "Are you sure you want to delete your account?" }, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
