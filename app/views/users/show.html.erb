<div class="modal-content w-50 mx-auto mt-5">
  <div class="modal-header">
    <h3 class="mx-auto">My Profile</h3>
  </div>
  <div class="modal-body">
    <div class="d-flex justify-content-center my-3">
      <%= image_tag "avatar.png", size: "100", class: "rounded-circle" %>

      <% unless @current_user.clerk? %>
        <%= link_to edit_user_path(id: @current_user.id), class: "position-relative" do %>
          <i class="bi bi-pencil position-absolute top-100 start-0 translate-middle" style="font-size:20px"></i>
        <% end %>
      <% end %>
    </div>
    <hr>
    <div class="d-flex  row-cols-2">
      <div class="col-4 text-center">
        Name :
      </div>
      <div class="col-8 text-center">
        <%= @current_user.name %>
      </div>
    </div>
    <div class="d-flex row-cols-2">
      <div class="col-4 text-center">
        Email:
      </div>
      <div class="col-8 text-center">
        <%= @current_user.email %>
      </div>
    </div>
  </div>
  <div class="modal-footer justify-content-center">
    <% unless @current_user.clerk? %>
      <%= link_to "Delete Account", @current_user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
